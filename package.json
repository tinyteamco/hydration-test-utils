{
  "name": "@tinyteamco/hydration-test-utils",
  "version": "0.2.1",
  "description": "Type-safe test state hydration for Jotai applications with Zod validation",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./playwright": {
      "types": "./dist/playwright.d.ts",
      "require": "./dist/playwright.js",
      "import": "./dist/playwright.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup",
    "dev": "tsup --watch",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "example:dev": "cd example && npm run dev",
    "example:build": "cd example && npm run build",
    "example:test": "cd example && npm run test",
    "example:install": "cd example && npm install"
  },
  "keywords": [
    "jotai",
    "testing",
    "hydration",
    "zod",
    "typescript",
    "e2e",
    "playwright",
    "cypress",
    "state-management",
    "test-utils"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tinyteamco/hydration-test-utils.git"
  },
  "homepage": "https://github.com/tinyteamco/hydration-test-utils#readme",
  "bugs": {
    "url": "https://github.com/tinyteamco/hydration-test-utils/issues"
  },
  "dependencies": {
    "jotai": "^2.12.5",
    "zod": "^4.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
